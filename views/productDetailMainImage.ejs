<!DOCTYPE html>
<html lang="es">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/header') %>
    <div class="container mt-5">
     
        <div class="row">
            <div class="col-12 col-md-8">
                <div class="card">
                    <div class="card-body">
                        
                        <div class="row">
                           
                            <div class="col-12 col-md-3">
                                <% images.forEach(image => { %>
                                    <img width="100%" src="/images/<%= image  %>" alt="">
                                <% }) %>
                               
                            </div>
                            <div class="col-12 col-md-9">
                                <img class="img-fluid" src="/images/<%= mainImage || 'default-placeholder.png' %>" alt="">
                                <h1><%= name %></h1>
                            </div>

                        </div>
                        <hr>   
                    </div>
                </div>
            </div>
        </div>
    </div>
    
  </body>
</html>