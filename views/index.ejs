<!DOCTYPE html>
<html>
<%- include('partials/head') %>

  <body>
    <%- include('partials/header') %>
      <div class="container">
        <h1>Upload Manager</h1>
        <hr>
        <div>
          <section class="row mt-5">
            <h2>Productos con UNA IMAGEN</h2>
            <% productsOneImage.forEach(({id,name,image})=> { %>
              <div class="col-12 col-md-3 col-lg-4">
                <div class="card" style="height: 360px;">
                  <img src="/images/<%= image %>" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h5 class="card-title">
                      <%= name %>
                    </h5>
                    <div class="d-flex justify-content-end gap-2">
                      <a href="/products/editOneImage/<%= id %>" class="btn btn-sm btn-success">Editar</a>
                      <form action="/products/deleteOneImage/<%= id %>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Eliminar</button>
                      </form>
                    </div>

                  </div>
                </div>
              </div>
              <% }) %>
          </section>
          <section class="row mt-5">
            <h2>Productos con VARIAS IMAGENES</h2>
            <% productsMultipleImages.forEach(({id,name,images})=> { %>
              <div class="col-12 col-md-3 col-lg-4">
                <div class="card" style="height: 360px;">
                  <img src="/images/<%= images[0] %>" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h5 class="card-title">
                      <%= name %>
                    </h5>
                    <div class="d-flex justify-content-end gap-2">
                      <a href="/products/detailMultipleImages/<%= id %>" class="btn btn-sm btn-primary">Ver más</a>
                      <a href="/products/editMultipleImages/<%= id %>" class="btn btn-sm btn-success">Editar</a>
                      <form action="/products/deleteMultipleImages/<%= id %>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Eliminar</button>
                      </form>
                    </div>

                  </div>
                </div>
              </div>
              <% }) %>
          </section>

          <section class="row mt-5">
            <h2>Productos con UNA IMAGEN PRINCIPAL</h2>
            <% productsMainImage.forEach(({id,name,mainImage})=> { %>
              <div class="col-12 col-md-3 col-lg-4">
                <div class="card" style="height: 360px;">
                  <img src="/images/<%= mainImage || 'default-placeholder.png' %>" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h5 class="card-title">
                      <%= name %>
                    </h5>
                    <div class="d-flex justify-content-end gap-2">
                      <a href="/products/detailMainImage/<%= id %>" class="btn btn-sm btn-primary">Ver más</a>
                      <a href="/products/editMainImage/<%= id %>" class="btn btn-sm btn-success">Editar</a>
                      <form action="/products/deleteMainImage/<%= id %>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Eliminar</button>
                      </form>
                    </div>

                  </div>
                </div>
              </div>
              <% }) %>
          </section>



        </div>
      </div>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
  </body>

</html>